{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,  // Debe estar habilitado para usar decoradores
    "emitDecoratorMetadata": true,   // Necesario para la metadata de los decoradores de TypeORM
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
